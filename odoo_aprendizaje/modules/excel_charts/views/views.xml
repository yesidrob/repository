
<odoo>
    <!-- Vista de árbol -->
    <record id="view_excel_data_list" model="ir.ui.view">
        <field name="name">excel.data.list</field>
        <field name="model">excel.data</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date_import"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario SIN chatter -->
    <record id="view_excel_data_form" model="ir.ui.view">
        <field name="name">excel.data.form</field>
        <field name="model">excel.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="file" filename="name"/>
                        <field name="date_import" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_excel_data" model="ir.actions.act_window">
        <field name="name">Excel Charts</field>
        <field name="res_model">excel.data</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_excel_data_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Importa archivos Excel para visualizar gráficos interactivos
            </p>
        </field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_excel_charts_root" name="Excel Charts" sequence="10"/>
    
    <!-- Submenú -->
    <menuitem id="menu_excel_charts" 
              name="Importar Datos" 
              parent="menu_excel_charts_root" 
              action="action_excel_data"
              sequence="10"/>
</odoo>